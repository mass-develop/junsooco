<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/anote"
        android:layout_width="314dp"
        android:layout_height="22dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Note"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3" />

    <TextView
        android:id="@+id/aCoinCode"
        android:layout_width="66dp"
        android:layout_height="19dp"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/anote" />

    <TextView
        android:id="@+id/aCoinName"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/aCoinCode"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/aCoinCode"
        android:layout_marginLeft="18dp" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Higher than"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/aCoinCode" />

    <TextView
        android:id="@+id/aLower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/aHigher"
        app:layout_constraintTop_toTopOf="@+id/textView38"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/aHigher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/aCoinName"
        app:layout_constraintTop_toTopOf="@+id/textView36"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Lower than"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <ImageButton
        android:id="@+id/alertDelete"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:background="#FFFFFF"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/d_delete"
        app:layout_constraintTop_toTopOf="@+id/aHigher"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="310dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#242424"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/aLower" />

</android.support.constraint.ConstraintLayout>