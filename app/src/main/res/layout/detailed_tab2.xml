<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#78909C">


  <TextView
      android:id="@+id/mNote"
      android:layout_width="77dp"
      android:layout_height="23dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:text="Time"
      android:textColor="@android:color/background_light"
      android:textSize="20sp"
app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/background_light"
      android:textSize="20sp"

      android:layout_marginLeft="20dp"
      android:layout_marginTop="8dp"
      android:text="Type"
      app:layout_constraintLeft_toRightOf="@+id/mNote"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/meditCoinName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text=" Price"
      android:textColor="@android:color/background_light"

      android:textSize="20sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/textView21"
      android:layout_marginRight="2dp" />

  <TextView
      android:id="@+id/textView15"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="8dp"
      android:text="Total"
      android:textColor="@android:color/background_light"
      android:textSize="20sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/textView20"
      android:layout_marginRight="2dp" />

  <TextView
      android:id="@+id/textView20"
      android:layout_width="wrap_content"
      android:textColor="@android:color/background_light"
      android:textSize="14sp"

      android:layout_height="wrap_content"
      android:text="(BTC)"
      android:layout_marginRight="10dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="@+id/textView15"
      android:layout_marginBottom="1dp" />

  <TextView
      android:id="@+id/textView21"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="0dp"
      android:textColor="@android:color/background_light"
      android:textSize="14sp"

      android:text="(BTC)"
      app:layout_constraintBottom_toBottomOf="@+id/meditCoinName"
      app:layout_constraintRight_toLeftOf="@+id/textView15"
      android:layout_marginRight="20dp" />
</android.support.constraint.ConstraintLayout>
  <ListView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/dt2listView"/>

</LinearLayout>